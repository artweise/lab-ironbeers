 {{#each randomBeer}}
<div id="generalContainer">
     
    <div id="rowContainer">
           
        <div id="beerImages">
            <img id="beerCardImages" src="{{image_url}}" alt="">
        </div>

        <div id="contentContainer">
            <p class="beerContent" id="nameContent">Beer Name: {{name}}</p> 
            <p class="beerContent">What makes it special? {{tagline}}</p>
            <p class="beerContent"> Description: {{description}}</p>
            <p class="beerContent">Food pairing: 
                <ul>
                    <li>{{food_pairing.[0]}}</li>
                    <br>
                    <li>{{food_pairing.[1]}}</li>
                    <br>
                    <li>{{food_pairing.[2]}}</li>
                </ul>
                
                </p>
            <p class="beerContent">Brewers tips: {{brewers_tips}}</p>
        </div>
    </div>
{{/each}}
</div>